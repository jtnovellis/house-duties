{
  "name": "house-duties",
  "version": "1.0.0",
  "description": "Console application to track rent and utility bills",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "house-duties": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "docker:build": "docker build -t house-duties:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:exec": "docker exec -it house-duties-app sh",
    "db:start": "docker-compose up -d postgres",
    "db:stop": "docker-compose down",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "keywords": [
    "bills",
    "rent",
    "utilities",
    "tracker",
    "console"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "prisma": "^5.7.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "inquirer": "^8.2.6"
  }
}
